<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3 col-10 offset-1">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" required name="campground[title]" id="title" value="<%= campground.title %> ">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>     
                <input class="form-control" type="text" required name="campground[location]" id="location" value="<%= campground.location %> ">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Upload Images</label><br>    
                <input type="file" name="image" id="image" multiple>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Campground Price</label>    
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" required class="form-control" id="price" name="campground[price]" value="<%= campground.price %> " placeholder="0.00" aria-label="Username" aria-describedby="price-lable">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>     
                <textarea class="form-control" required type="text" name="campground[description]" id="description"><%= campground.description %> </textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Campground</button>
            </div>
        </form>
    </div>
</div>
